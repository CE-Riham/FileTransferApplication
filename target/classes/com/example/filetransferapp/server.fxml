                <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="28.0">
                    <children>
                        <Label text="server IP" textAlignment="CENTER" />
                        <TextField fx:id="serverIP" disable="true" prefWidth="150.0" />
                        <Label textAlignment="CENTER" />
                        <Label text="server port" textAlignment="CENTER" />
                        <TextField fx:id="serverPort" prefWidth="100.0" />
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="25.0">
                    <children>
                        <Label text="Client IP " textAlignment="CENTER" />
                        <TextField fx:id="clientIP" prefWidth="150.0">
                     <HBox.margin>
                        <Insets left="1.0" />
                     </HBox.margin></TextField>
                        <Label prefHeight="19.0" prefWidth="6.0" textAlignment="CENTER" />
                        <Label text="Client port" textAlignment="CENTER" />
                        <TextField fx:id="clientPort" prefWidth="100.0">
                     <HBox.margin>
                        <Insets left="4.0" />
                     </HBox.margin></TextField>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" prefWidth="200.0" spacing="15.0">
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_RIGHT" prefWidth="200.0" spacing="15.0" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
